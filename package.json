{
	"name": "highlight-files",
	"displayName": "Highlight Files",
	"description": "",
	"version": "0.0.4",
	"engines": {
		"vscode": "^1.46.0"
	},
  "publisher": "ArturoDent",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ArturoDent/highlight-files"
  },
  "main": "./src/extension.js",
  "browser": "./src/extension.js",
	"categories": [
		"Other"
	],
	"activationEvents": [
    "onStartupFinished"
	],
	"contributes": {
    "configuration": [
      {
        "title": "Highlight Files",
        "properties": {
          "highlight-files.enable": {
            "type": "boolean",
            "scope": "machine",
            "default": false,
            "markdownDescription": "Enable colored tabs for non-workspace files."
          }
        }
      }
    ],

    "colors": [
      {
        "id": "highlightFiles.nonWorkspaceFiles",
        "description": "Color for a non-workspace editor label",
        "defaults": {
          "dark": "#91ff00",
          "light": "#91ff00",
          "highContrast": "#91ff00",
          "highContrastLight": "#91ff00"
        }
      }
    ]
	},
  "extensionKind": [
    "ui",
    "workspace"
  ],
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
        "@types/vscode": "^1.46.0",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "eslint": "^6.8.0",
        "glob": "^7.1.6",
		"mocha": "^7.1.2",
        "typescript": "^3.8.3",
        "vscode-test": "^1.3.0"
    }

}
